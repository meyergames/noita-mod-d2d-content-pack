<Entity tags="perk_entity,d2d_time_trial">

    <InheritTransformComponent />
	
    <LifetimeComponent
		lifetime="3600"
	></LifetimeComponent>

    <GameEffectComponent 
        effect="CUSTOM"
        custom_effect_id="D2D_TIME_TRIAL"
        frames="3600"
    ></GameEffectComponent >

    <UIIconComponent
        icon_sprite_file="mods/D2DContentPack/files/gfx/ui_gfx/status_effects/time_trial_overhead.png"
        name="Time Trial"
        description="You don't have time to read tooltips!!"
        display_in_hud="false"
        display_above_head="true"
        is_perk="false"
    ></UIIconComponent>

    <!--INIT -->
    <LuaComponent
      script_source_file="mods/D2DContentPack/files/scripts/perks/effect_time_trial_on.lua"
      execute_every_n_frame="1"
        execute_times="1"
    ></LuaComponent>
	
    <!-- UPDATE -->
	<LuaComponent 
		_enabled="1" 
		script_source_file="mods/D2DContentPack/files/scripts/perks/effect_time_trial_update.lua" 
		execute_every_n_frame="60"
	></LuaComponent>

    <!-- ON REMOVE -->
    <LuaComponent
      script_source_file="mods/D2DContentPack/files/scripts/perks/effect_time_trial_off.lua"
      execute_every_n_frame="-1"
        execute_on_added="0"
        execute_on_removed="1"
    ></LuaComponent>

    <MusicEnergyAffectorComponent
        energy_target="1.0"
    >
    </MusicEnergyAffectorComponent>

</Entity>
