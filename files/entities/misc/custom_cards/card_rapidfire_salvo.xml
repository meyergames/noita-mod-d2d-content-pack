<Entity tags="card_action">

    <Base file="data/entities/base_custom_card.xml" >

        <SpriteComponent 
            image_file="mods/RiskRewardBundle/files/gfx/ui_gfx/rapidfire_salvo.png" >
        </SpriteComponent>

        <ItemActionComponent 
            _tags="enabled_in_world"
            action_id="CTQ_VOLLEY" >
        </ItemActionComponent>

    </Base>

    <LuaComponent
        _tags="enabled_in_hand"
        script_enabled_changed="mods/RiskRewardBundle/files/scripts/projectiles/rapidfire_salvo_toggle.lua"
        execute_every_n_frame="-1"
    ></LuaComponent>    
</Entity>


<Entity>
    
    <Base file="data/entities/base_custom_card.xml" > 
        <SpriteComponent 
            image_file="mods/cool_spell/files/icons/laser_sight.png" >
        </SpriteComponent>
        
        <ItemActionComponent 
            _tags="enabled_in_world"
            action_id="LASER_SIGHT" >
        </ItemActionComponent>
    </Base>
    
    <LaserEmitterComponent
        _tags="enabled_in_hand"
        is_emitting="1">
        <laser
            damage_to_entities="0"
            damage_to_cells="0"
            max_length="312"
            beam_radius="0.5"
            max_cell_durability_to_destroy="0"
            audio_enabled="0"
            hit_particle_chance="0"
            beam_particle_chance="50"
            beam_particle_type="spark"
            >
        </laser>
    </LaserEmitterComponent>
    
    <InheritTransformComponent
        always_use_immediate_parent_rotation="1" 
        _tags="enabled_in_world,enabled_in_hand" >
      <Transform 
        position.x="8" 
        position.y="0" >
      </Transform>
    </InheritTransformComponent>
    
</Entity>