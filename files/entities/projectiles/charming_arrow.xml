    randomize_position.max_x="6"
    randomize_position.min_y="-6"
    randomize_position.max_y="6"
    >
  </SpriteParticleEmitterComponent>

	<ParticleEmitterComponent 
		emitted_material_name="spark_pink"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
