  </HitEffectComponent > -->
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/D2DContentPack/files/gfx/projectiles_gfx/charming_arrow.xml" 
    next_rect_animation=""
    rect_animation="" 
    additive="1"
    >
  </SpriteComponent>

  <SpriteParticleEmitterComponent
    sprite_file="mods/D2DContentPack/files/particles/charm_small.xml"
    delay="0"
    lifetime="1.0"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="30"
