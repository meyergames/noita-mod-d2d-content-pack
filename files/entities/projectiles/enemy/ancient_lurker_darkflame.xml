<Entity 
  name="$projectile_default" 
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="0"
			mass="0.03"
			>
    	</VelocityComponent> 
	</Base>

  <ProjectileComponent 
    _enabled="1" 
  	speed_min="180"
  	speed_max="180"
    die_on_low_velocity="0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
	  explosion_dont_damage_shooter="1"
    damage="0.8"
    on_collision_die="1"
		collide_with_entities="0"
    lifetime="100"
		shoot_light_flash_r="190"
    shoot_light_flash_g="40"
    shoot_light_flash_b="245"
    shoot_light_flash_radius="140" 
	>
    <config_explosion
      never_cache="1" 
      camera_shake="0"
	  damage="0"
      explosion_radius="1" 
      explosion_sprite="data/particles/darkflame.xml"
      explosion_sprite_lifetime="0.0" 
      create_cell_probability="0" 
      create_cell_material="" 
	  ray_energy="0"
      hole_destroy_liquid="0" 
      hole_enabled="0" 
      hole_image="" 
      particle_effect="0" 
      damage_mortals="0"
	  physics_explosion_power.min="0"
      physics_explosion_power.max="0" 
      physics_throw_enabled="0" 
      shake_vegetation="1" 
      sparks_enabled="0" 
      sparks_count_max="0" 
      sparks_count_min="0"
      light_fade_time="0.1" 
	  light_enabled="1"
	  light_r="80"
	  light_g="5"
	  light_b="120"
	  light_radius_coeff="64"
      stains_enabled="0" 
      stains_image="data/temp/explosion_stain.png" >
    </config_explosion>
  </ProjectileComponent>
  
	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="data/projectiles_gfx/darkflame.xml" 
		next_rect_animation="" 
		offset_x="6" 
		offset_y="6" 
		rect_animation="spawn" 


		update_transform_rotation="0"
		>
	</SpriteComponent>
	
	<SpriteParticleEmitterComponent
		sprite_file="data/particles/lurkershot.xml"
		delay="0"
		lifetime="0"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="0"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		velocity_slowdown="0.5"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="2"
		emission_interval_max_frames="5"
		count_min="1" count_max="1"
		randomize_position.min_x="-8"
		randomize_position.max_x="8"
		randomize_position.min_y="-8"
		randomize_position.max_y="8"
		randomize_velocity.min_y="-8"
		randomize_velocity.max_y="8"
		randomize_velocity.min_x="-8"
		randomize_velocity.max_x="8"
		>
	</SpriteParticleEmitterComponent>

	<LuaComponent 
		_enabled="1"
		script_source_file="mods/D2DContentPack/files/scripts/projectiles/enemy/ancient_lurker_darkflame_on.lua"
		execute_on_added="1"
		execute_times="1"
	></LuaComponent>

	<LuaComponent 
		_enabled="1" 
		script_source_file="data/scripts/projectiles/darkflame.lua" 
		execute_every_n_frame="1"
	></LuaComponent>

  <LuaComponent 
      _enabled="1" 
      script_source_file="mods/D2DContentPack/files/scripts/projectiles/enemy/ancient_lurker_darkflame_update.lua"
      execute_every_n_frame="1"
  ></LuaComponent>

  <LuaComponent 
      _enabled="1" 
      script_source_file="mods/D2DContentPack/files/scripts/projectiles/enemy/ancient_lurker_darkflame_death.lua"
      execute_every_n_frame="-1"
      execute_on_removed="1"
  ></LuaComponent>

	<LightComponent 
		_enabled="1" 
		radius="64" 
		r="80"
		g="5"
		b="120"
		fade_out_time="0.5"
		>
	</LightComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="projectiles/rocket">
  </AudioComponent>
  
  <VariableStorageComponent
		name="projectile_file"
		value_string="data/entities/projectiles/darkflame.xml"
		>
	</VariableStorageComponent>

</Entity>
