<Entity 
  name="$projectile_default" tags="d2d_beacon"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="2.8"
			mass="0.85"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="75"
    speed_max="125"
    friction="1"
    direction_random_rad="0.0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="0"
    on_collision_die="0"
		collide_with_entities="0"
    lifetime="-1"
    damage="0.0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file=""
    shoot_light_flash_radius="0"
    bounces_left="0"
    velocity_sets_scale="0"
    velocity_sets_rotation="0"
		knockback_force="1.0"
		physics_impulse_coeff="500"
    >
    <config_explosion
      never_cache="1" 
      damage="0"
      camera_shake="0" 
      explosion_radius="4" 
      explosion_sprite="data/particles/explosion_040_electric2.xml"
      explosion_sprite_lifetime="0" 
      create_cell_probability="0" 
      hole_destroy_liquid="1" 
      hole_enabled="1" 
      ray_energy="400000"
      particle_effect="0" 
      damage_mortals="0"
      physics_explosion_power.min="0.05"
      physics_explosion_power.max="0.1" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_enabled="0"  
      material_sparks_enabled="1"
      material_sparks_count_max="2"
      material_sparks_count_min="0" 
      light_enabled="0" 
      stains_enabled="1"
      stains_radius="3"
      audio_event_name="explosions/magic_grenade_tiny">
    </config_explosion>
  </ProjectileComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="255"
    g="255"
    b="255">
  </LightComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="0.8" 
    image_file="mods/D2DContentPack/files/gfx/projectiles_gfx/beacon_white.xml"
    next_rect_animation=""
    rect_animation=""
    offset_x="10"
    offset_y="10"
		has_special_scale="1"
		special_scale_x="1"
		special_scale_y="1"
     >
  </SpriteComponent>

  <InteractableComponent
    _tags="enabled_in_world"
    _enabled="1"
    name="beacon_change_colour"
    ui_text="$ix_d2d_beacon_change_colour"
    exclusivity_group="1"
  ></InteractableComponent>

  <LuaComponent
    script_interacting="mods/D2DContentPack/files/scripts/projectiles/beacon_change_colour.lua"
  ></LuaComponent>

  <LuaComponent
    script_source_file="mods/D2DContentPack/files/scripts/projectiles/beacon_on_created.lua"
    execute_times="1"
  ></LuaComponent>

  <LuaComponent
    script_source_file="mods/D2DContentPack/files/scripts/projectiles/beacon_register.lua"
    execute_every_n_frame="120"
    execute_times="1"
  ></LuaComponent>

  <LuaComponent
    script_collision_trigger_hit="mods/D2DContentPack/files/scripts/projectiles/beacon_on_collision.lua"
  ></LuaComponent>

  <LuaComponent
    script_source_file="mods/D2DContentPack/files/scripts/projectiles/beacon_try_reregister_if_lost.lua"
    execute_every_n_frame="60"
  ></LuaComponent>

  <AudioComponent
    file="data/audio/Desktop/projectiles.bank"
    event_root="player_projectiles/bullet_launcher">
  </AudioComponent>

  <AudioComponent
    file="data/audio/Desktop/animals.bank"
    event_root="animals/mine" >
  </AudioComponent>

  <CollisionTriggerComponent
  	width="12"
  	height="12"
  	radius="10"
    required_tag="projectile_player"
    self_trigger="1"
  	timer_for_destruction="-1" >
  </CollisionTriggerComponent>
	
	<LuaComponent
		execute_on_removed="0"
		execute_every_n_frame="750"
		script_source_file="data/scripts/projectiles/mine_animate_slow.lua"
		remove_after_executed="1">
	</LuaComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/D2DContentPack/files/entities/projectiles/beacon.xml"
		>
	</VariableStorageComponent>

  <SpriteParticleEmitterComponent
    sprite_file="data/particles/dust.xml"
    delay="0"
    lifetime="30"
    color.r="1" color.g="1" color.b="1" color.a="1"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-1"
    velocity.x="0" velocity.y="0"
    gravity.x="0" gravity.y="30"
    velocity_slowdown="0"
    rotation="0"
    angular_velocity="0"
    use_velocity_as_rotation="0"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    emission_interval_min_frames="6"
    emission_interval_max_frames="18"
    count_min="1" count_max="1"
    randomize_rotation.min="-3.1415"
    randomize_rotation.max="3.1415"
    randomize_angular_velocity.min="-15"
    randomize_angular_velocity.max="15"
    randomize_velocity.min_x="-5"
    randomize_velocity.max_x="5"
    randomize_velocity.min_y="-30"
    randomize_velocity.max_y="-10"
    randomize_position.min_x="-8"
    randomize_position.max_x="8"
    randomize_position.min_y="-8"
    randomize_position.max_y="6"
    >
  </SpriteParticleEmitterComponent>

</Entity>
