<Entity>

    <InheritTransformComponent />
	
    <GameEffectComponent 
        effect="CUSTOM"
        custom_effect_id="INJECTED_VIRUS"
        frames="-1"
    ></GameEffectComponent >

    <!--this is basically a function call that happens when the GameEffect is ACTIVATED-->
    <LuaComponent
      script_source_file="mods/cheytaq_first_mod/files/scripts/status_effects/borrowed_time_effect_on.lua"
      execute_every_n_frame="1"
        execute_times="1"
      >
    </LuaComponent>
	
    <!--this is basically a function call that happens when the GameEffect is... remover?-->
	<LuaComponent 
		_enabled="1" 
		script_source_file="mods/cheytaq_first_mod/files/scripts/status_effects/borrowed_time_effect_remover.lua" 
		execute_every_n_frame="1">
	</LuaComponent>

    <!--this is basically a function call that happens when the GameEffect is REMOVED-->
    <LuaComponent
      script_source_file="mods/cheytaq_first_mod/files/scripts/status_effects/borrowed_time_effect_off.lua"
      execute_every_n_frame="-1"
        execute_on_removed="1"
      >
    </LuaComponent>
	
    <!--this is basically a function call that happens when the GameEffect is ADDED-->
	<LuaComponent 
	    execute_every_n_frame="1"
		remove_after_executed="1"
		execute_on_added="1"
	    script_source_file="mods/cheytaq_first_mod/files/scripts/status_effects/borrowed_time_status.lua"
	></LuaComponent>

</Entity>
