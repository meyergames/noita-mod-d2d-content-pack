<Entity 
  name="$projectile_default" tags="projectile_player,d2d_beacon"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="2.8"
			mass="0.85"
			>
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="75"
    speed_max="125"
    friction="1"
    direction_random_rad="0.0"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0"
    on_collision_die="1"
		collide_with_entities="1"
    lifetime="-1"
    damage="0.0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file=""
    shoot_light_flash_radius="0"
    bounces_left="0"
    velocity_sets_scale="0"
    velocity_sets_rotation="0"
		knockback_force="1.0"
		physics_impulse_coeff="500"
    spawn_entity="mods/Apotheosis/files/entities/projectiles/mist_water.xml"
    >
    <config_explosion
      never_cache="1"
      camera_shake="25.0"
      explosion_radius="30"
      explosion_sprite="data/particles/explosion_040_poof.xml"
      load_this_entity="data/entities/particles/particle_explosion/main.xml"
      explosion_sprite_lifetime="0"
      create_cell_probability="0"
      ray_energy="0"
      hole_destroy_liquid="0"
      damage="0"
      hole_enabled="0"
      particle_effect="1" 
      damage_mortals="0"
      physics_explosion_power.min="0"
      physics_explosion_power.max="0"
      physics_throw_enabled="1"
      shake_vegetation="1"
      sparks_enabled="0"
      light_fade_time="1.2"
      light_r="255"
      light_g="20"
      light_b="20"
      stains_enabled="1"
      stains_image="data/temp/explosion_stain.png"
      audio_event_name="explosions/magic_grenade_small" >
    </config_explosion>
  </ProjectileComponent>

  <LightComponent 
    _enabled="1" 
    radius="150" 
    r="255"
    g="255"
    b="255">
  </LightComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="0.8" 
    image_file="mods/D2DContentPack/files/gfx/projectiles_gfx/beacon.xml"
    next_rect_animation=""
    rect_animation=""
    offset_x="10"
    offset_y="10"
		has_special_scale="1"
		special_scale_x="1"
		special_scale_y="1"
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_launcher">
  </AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>

  <AudioComponent
    file="data/audio/Desktop/animals.bank"
    event_root="animals/mine" >
  </AudioComponent>

  <CollisionTriggerComponent
  	width="40"
  	height="40"
  	radius="20"
    required_tag="projectile_player"
    self_trigger="1"
  	timer_for_destruction="1" >
  </CollisionTriggerComponent>
	
	<LuaComponent
		execute_on_removed="0"
		execute_every_n_frame="750"
		script_source_file="data/scripts/projectiles/mine_animate_slow.lua"
		remove_after_executed="1">
	</LuaComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/D2DContentPack/files/entities/projectiles/deck/beacon.xml"
		>
	</VariableStorageComponent>
  
	<VariableStorageComponent
		name="beacon_sprite_path"
		value_string="mods/D2DContentPack/files/particles/radar_beacon_wand.png"
		>
	</VariableStorageComponent>

</Entity>
